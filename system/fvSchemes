FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default backward;
}

gradSchemes
{
    default        leastSquares;
}

divSchemes
{
    default         Gauss linear;
    div(phi,U)      Gauss LUST grad(U) ; // Gauss linear; // switch to LUST or linearUpwind
    div(phi,T)      Gauss linear;
    div((nuEff*dev(T(grad(U))))) Gauss linear;
}

laplacianSchemes
{
    default        Gauss linear corrected;
}

interpolationSchemes
{
    default                linear;
}

snGradSchemes
{
    default         corrected;
}


